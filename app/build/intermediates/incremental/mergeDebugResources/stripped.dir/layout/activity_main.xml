<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200">

    <!-- TODO 01. Define the layout for the MainActivity here. -->
    <!-- NOTE: Remember that in order to include some GUI components you will have to use the Material library -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipScan"
                    style="@style/Chip.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_chip"
                    app:chipIcon="@drawable/ic_center_focus_weak_chip" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTopUp"
                    style="@style/Chip.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/top_up_chip"
                    app:chipIcon="@drawable/ic_add_circle_outline_chip" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSend"
                    style="@style/Chip.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_chip"
                    app:chipIcon="@drawable/ic_open_in_new_chip" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRequest"
                    style="@style/Chip.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/request_chip"
                    app:chipIcon="@drawable/ic_open_in_new_rotated_chip" />
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBuyNow"
            style="@style/CardView.White"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagePulsa"
                    android:layout_width="@dimen/spacing_xxlarge"
                    android:layout_height="@dimen/spacing_xxlarge"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_phone_android" />

                <TextView
                    android:id="@+id/textViewPulsa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/pulsa_amp_data"
                    android:textSize="18dp"
                    app:layout_constraintStart_toEndOf="@id/imagePulsa"
                    app:layout_constraintTop_toTopOf="@id/imagePulsa" />

                <TextView
                    android:id="@+id/textBonusPulsa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bonus_pulsa_50"
                    android:textColor="@color/red_300"
                    android:textSize="13dp"
                    app:layout_constraintStart_toStartOf="@id/textViewPulsa"
                    app:layout_constraintTop_toBottomOf="@id/textViewPulsa" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBuyNow"
                    style="@style/Button.Blue.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/buy_now"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/imagePulsa" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imagePulsa">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnElec"
                        style="@style/Button.White.Borderless"
                        android:layout_marginRight="15dp"
                        android:text="Electric..."
                        app:icon="@drawable/ic_lightbulb"
                        app:iconTint="@color/yellow_900" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCashout"
                        style="@style/Button.White.Borderless"
                        android:layout_marginRight="15dp"
                        android:text="Cashout"
                        app:icon="@drawable/ic_monetization_on"
                        app:iconTint="@color/green_400" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGames"
                        style="@style/Button.White.Borderless"
                        android:text="Games"
                        app:icon="@drawable/ic_games"
                        app:iconTint="@color/light_blue_500" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMore"
                        style="@style/Button.White.Borderless"
                        android:layout_marginLeft="15dp"
                        android:text="See All"
                        app:icon="@drawable/ic_more_horiz"
                        app:iconTint="@color/red_300" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btnGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardBuyNow"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFull"
                style="@style/Button.Blue.Group"
                android:onClick="removeDiscount"
                android:text="No Discount" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDiscount"
                style="@style/Button.Blue.Group"
                android:onClick="applyDiscount"
                android:text="Discount" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardInvoice"
            style="@style/CardView.White"
            app:layout_constraintEnd_toEndOf="@id/cardBuyNow"
            app:layout_constraintStart_toStartOf="@id/cardBuyNow"
            app:layout_constraintTop_toBottomOf="@id/btnGroup">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtInvoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Invoice"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_300"
                    android:textSize="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/btnRefresh"
                    android:layout_width="@dimen/spacing_xlarge"
                    android:layout_height="@dimen/spacing_xlarge"
                    android:layout_margin="12dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_back_and_forth"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtInvoice" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <CheckBox
                            android:id="@+id/check1"
                            style="@style/CheckBox.Blue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="Product 01"
                            android:textStyle="bold" />
                        <CheckBox
                            android:id="@+id/check2"
                            style="@style/CheckBox.Blue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="Product 01"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtCost1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/check1"
                            app:layout_constraintBottom_toBottomOf="@id/check1"
                            android:gravity="center"
                            android:text="12.96"
                            android:textAlignment="center" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSubtract"
                            style="@style/Button.Quantity.Subtract"
                            android:tag="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/editQty1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/editQty1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="5"
                            android:inputType="number"
                            android:tag="1"
                            android:text="0"
                            android:textAlignment="center"
                            android:textIsSelectable="true"
                            app:layout_constraintStart_toEndOf="@id/txtCost1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAdd"
                            style="@style/Button.Quantity.Add"
                            android:tag="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/editQty1"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/txtSubtotal1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/editQty1"
                            android:gravity="center"
                            android:text="@string/_00_00" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalculate"
            style="@style/Button.Outlined.White"
            android:text="Calculate Total"
            app:layout_constraintStart_toStartOf="@id/cardInvoice"
            app:layout_constraintTop_toBottomOf="@id/cardInvoice" />


        <TextView
            android:id="@+id/txtTotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:text="Total:"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnCalculate"
            app:layout_constraintTop_toTopOf="@id/btnCalculate" />

        <TextView
            android:id="@+id/txtCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="@string/dollar_symbol"
            app:layout_constraintStart_toEndOf="@id/txtTotalLabel"
            app:layout_constraintTop_toTopOf="@id/txtTotalLabel" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="@string/_00_00"
            app:layout_constraintStart_toEndOf="@id/txtCurrency"
            app:layout_constraintTop_toTopOf="@id/txtTotalLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
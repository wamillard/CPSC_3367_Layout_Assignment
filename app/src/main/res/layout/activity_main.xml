<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200">

    <!-- TODO 01. Define the layout for the MainActivity here. -->
    <!-- NOTE: Remember that in order to include some GUI components you will have to use the Material library -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipScan"
                    style="@style/Chip.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_chip"
                    app:chipIcon="@drawable/ic_center_focus_weak_chip" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTopUp"
                    style="@style/Chip.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/top_up_chip"
                    app:chipIcon="@drawable/ic_add_circle_outline_chip" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSend"
                    style="@style/Chip.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_chip"
                    app:chipIcon="@drawable/ic_open_in_new_chip" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRequest"
                    style="@style/Chip.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/request_chip"
                    app:chipIcon="@drawable/ic_open_in_new_rotated_chip" />
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBuyNow"
            style="@style/CardView.White"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagePulsa"
                    android:layout_width="@dimen/spacing_xxlarge"
                    android:layout_height="@dimen/spacing_xxlarge"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_phone_android" />

                <TextView
                    android:id="@+id/textViewPulsa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/pulsa_amp_data"
                    android:textSize="18dp"
                    app:layout_constraintStart_toEndOf="@id/imagePulsa"
                    app:layout_constraintTop_toTopOf="@id/imagePulsa" />

                <TextView
                    android:id="@+id/textBonusPulsa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bonus_pulsa_50"
                    android:textColor="@color/red_300"
                    android:textSize="13dp"
                    app:layout_constraintStart_toStartOf="@id/textViewPulsa"
                    app:layout_constraintTop_toBottomOf="@id/textViewPulsa" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBuyNow"
                    style="@style/Button.Blue.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/buy_now"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/imagePulsa" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imagePulsa">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnElec"
                        style="@style/Button.White.Borderless"
                        android:layout_marginRight="15dp"
                        android:text="Electric..."
                        app:icon="@drawable/ic_lightbulb"
                        app:iconTint="@color/yellow_900" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCashout"
                        style="@style/Button.White.Borderless"
                        android:layout_marginRight="15dp"
                        android:text="Cashout"
                        app:icon="@drawable/ic_monetization_on"
                        app:iconTint="@color/green_400" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGames"
                        style="@style/Button.White.Borderless"
                        android:text="Games"
                        app:icon="@drawable/ic_games"
                        app:iconTint="@color/light_blue_500" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMore"
                        style="@style/Button.White.Borderless"
                        android:layout_marginLeft="15dp"
                        android:text="See All"
                        app:icon="@drawable/ic_more_horiz"
                        app:iconTint="@color/red_300" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/btnGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/cardBuyNow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cardInvoice"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFull"
                style="@style/Button.Blue.Group"
                android:onClick="removeDiscount"
                android:text="No Discount" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDiscount"
                style="@style/Button.Blue.Group"
                android:onClick="applyDiscount"
                android:text="Discount" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutDiscount"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Discount"
            app:layout_constraintBottom_toTopOf="@id/cardInvoice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnGroup"
            app:layout_constraintTop_toBottomOf="@id/cardBuyNow"
            app:startIconDrawable="@drawable/ic_baseline_remove_24"
            app:endIconDrawable="@drawable/ic_baseline_add_24"
            app:endIconMode="custom"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="25%" />


        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardInvoice"
            style="@style/CardView.White"
            app:layout_constraintEnd_toEndOf="@id/cardBuyNow"
            app:layout_constraintStart_toStartOf="@id/cardBuyNow"
            app:layout_constraintTop_toBottomOf="@id/btnGroup">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtInvoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Invoice"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_300"
                    android:textSize="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/btnRefresh"
                    android:layout_width="@dimen/spacing_xlarge"
                    android:layout_height="@dimen/spacing_xlarge"
                    android:layout_margin="12dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_back_and_forth"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtInvoice" />

                <LinearLayout
                    android:id="@+id/layoutProductList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider">

                    <!-- Product 1-->

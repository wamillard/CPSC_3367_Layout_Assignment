                            style="@style/Button.Quantity.Add"
                            android:tag="0"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/editQty0"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            style="@style/TextView.Product.Currency"
                            app:layout_constraintTop_toTopOf="@id/txtCost0"
                            app:layout_constraintEnd_toStartOf="@id/txtCost0"
                            />

                        <TextView
                            android:id="@+id/txtCost0"
                            style="@style/TextView.Product"
                            app:layout_constraintBottom_toBottomOf="@id/editQty0"
                            app:layout_constraintStart_toEndOf="@id/btnAdd0"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <TextView
                            style="@style/TextView.Product.Currency"
                            app:layout_constraintTop_toTopOf="@id/txtCost0"
                            app:layout_constraintEnd_toStartOf="@id/txtSubtotal0"
                            />

                        <TextView
                            android:id="@+id/txtSubtotal0"
                            style="@style/TextView.Product"
                            android:inputType="numberDecimal"
                            android:text="@string/_00_00"
                            app:layout_constraintBottom_toBottomOf="@id/editQty0"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


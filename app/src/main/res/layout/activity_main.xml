                            app:layout_constraintStart_toEndOf="@id/btnSubtract6"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAdd6"
                            style="@style/Button.Quantity.Add"
                            android:tag="6"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/editQty6"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            style="@style/TextView.Product.Currency"
                            app:layout_constraintTop_toTopOf="@id/txtCost6"
                            app:layout_constraintEnd_toStartOf="@id/txtCost6"
                            />

                        <TextView
                            android:id="@+id/txtCost6"
                            style="@style/TextView.Product"
                            app:layout_constraintBottom_toBottomOf="@id/editQty6"
                            app:layout_constraintStart_toEndOf="@id/btnAdd6"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            style="@style/TextView.Product.Currency"
                            app:layout_constraintTop_toTopOf="@id/txtCost6"
                            app:layout_constraintEnd_toStartOf="@id/txtSubtotal6"
                            />

                        <TextView
                            android:id="@+id/txtSubtotal6"
                            style="@style/TextView.Product"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/editQty6"
                            android:text="@string/_00_00" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Product 8-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:id="@+id/check7"
                            style="@style/CheckBox.Blue"
                            android:text="Product 01"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSubtract7"
                            style="@style/Button.Quantity.Subtract"
                            android:tag="7"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/check7"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/editQty7"
                            style="@style/EditText.Quantity"
                            app:layout_constraintStart_toEndOf="@id/btnSubtract7"
                            app:layout_constraintTop_toTopOf="parent"
                            android:tag="7" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAdd7"
                            style="@style/Button.Quantity.Add"
                            android:tag="7"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/editQty7"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            style="@style/TextView.Product.Currency"
                            app:layout_constraintEnd_toStartOf="@id/txtCost7"
                            app:layout_constraintTop_toTopOf="@id/txtCost7" />

                        <TextView
                            android:id="@+id/txtCost7"
                            style="@style/TextView.Product"
                            app:layout_constraintBottom_toBottomOf="@id/editQty7"
                            app:layout_constraintStart_toEndOf="@id/btnAdd7"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            style="@style/TextView.Product.Currency"
                            app:layout_constraintEnd_toStartOf="@id/txtSubtotal7"
                            app:layout_constraintTop_toTopOf="@id/txtCost7" />

                        <TextView
                            android:id="@+id/txtSubtotal7"
                            style="@style/TextView.Product"
                            android:text="@string/_00_00"
                            app:layout_constraintBottom_toBottomOf="@id/editQty7"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalculate"
            style="@style/Button.Outlined.White"
            android:text="Calculate Total"
            app:layout_constraintStart_toStartOf="@id/cardInvoice"
            app:layout_constraintTop_toBottomOf="@id/cardInvoice" />

        <TextView
            android:id="@+id/txtTotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:text="Total:"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnCalculate"
            app:layout_constraintTop_toTopOf="@id/btnCalculate" />

        <TextView
            android:id="@+id/txtCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="@string/dollar_symbol"
            app:layout_constraintStart_toEndOf="@id/txtTotalLabel"
            app:layout_constraintTop_toTopOf="@id/txtTotalLabel" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="@string/_00_00"
            app:layout_constraintStart_toEndOf="@id/txtCurrency"
            app:layout_constraintTop_toTopOf="@id/txtTotalLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>